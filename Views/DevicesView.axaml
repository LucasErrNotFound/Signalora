<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Signalora.ViewModels"
    xmlns:shadui="clr-namespace:ShadUI;assembly=ShadUI"
    xmlns:scroll="using:Xaml.Behaviors.Interactions.Animated"
    x:DataType="vm:DevicesViewModel"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="Signalora.Views.DevicesView">
    
    <Design.DataContext>
        <vm:DevicesViewModel />
    </Design.DataContext>
    
    <DockPanel LastChildFill="True">
        <StackPanel
            MaxWidth="{StaticResource PageMaxWidth}"
            Margin="{StaticResource PageMargin}"
            DockPanel.Dock="Top">
            <TextBlock
                FontSize="30"
                FontWeight="SemiBold"
                Text="Devices"
                Margin="90,30,0,0" />
            <TextBlock
                Classes="Caption Muted"
                FontSize="14"
                Text="View all active devices on your network."
                TextWrapping="Wrap"
                Margin="90,0,0,0" />
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Interaction.Behaviors>
                <scroll:VerticalScrollViewerAnimatedBehavior />
            </Interaction.Behaviors>
            <StackPanel MaxWidth="{StaticResource PageMaxWidth}" Margin="90,45,90,25" Spacing="16">
                <shadui:Card>
                    <StackPanel>
                        <Grid 
                            ColumnDefinitions="Auto Auto *" 
                            Margin="0,0,0,20"
                            ColumnSpacing="20">
                            
                            <!-- Search Box -->
                            <TextBox 
                                Grid.Column="0"
                                Classes="Clearable"
                                Width="400"
                                Watermark="Search for devices..."
                                Text="{CompiledBinding SearchText}">
                                <TextBox.InnerRightContent>
                                    <PathIcon
                                        Data="{x:Static shadui:Icons.Search}"
                                        Opacity="0.75"
                                        Width="16" />
                                </TextBox.InnerRightContent>
                            </TextBox>
                            
                            <!-- Filter ComboBox -->
                            <ComboBox 
                                Grid.Column="1"
                                Width="180"
                                ItemsSource="{CompiledBinding FilterOptions}"
                                SelectedItem="{CompiledBinding SelectedFilter}">
                            </ComboBox>
                            
                            <Button 
                                Classes="Primary"
                                HorizontalAlignment="Right"
                                Grid.Column="2"
                                Command="{CompiledBinding ScanNetworkCommand}"
                                IsEnabled="{CompiledBinding !IsScanning}"
                                ToolTip.Tip="Scan Network">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock 
                                        Classes="LucideIcon" 
                                        Text="&#57958;" />
                                    <TextBlock Text="Scan Network" />
                                </StackPanel>
                            </Button>
                        </Grid>
                        
                        <!-- Loading Indicator -->
                        <StackPanel 
                            Margin="0,10,0,10"
                            IsVisible="{CompiledBinding IsScanning}"
                            HorizontalAlignment="Center">
                            <TextBlock 
                                Text="Scanning network..." 
                                Classes="Caption Muted"
                                HorizontalAlignment="Center" />
                        </StackPanel>
                        
                        <!-- DataGrid of Devices -->
                        <DataGrid
                            Height="700"
                            CanUserReorderColumns="False"
                            CanUserResizeColumns="False"
                            CanUserSortColumns="False"
                            IsReadOnly="True"
                            GridLinesVisibility="All"
                            SelectionMode="Single"
                            HeadersVisibility="Column"
                            ItemsSource="{CompiledBinding FilteredDevices}">
                            
                            <DataGrid.Styles>
                                <Style Selector="TextBlock">
                                    <Setter Property="TextWrapping" Value="WrapWithOverflow" />
                                </Style>
                            </DataGrid.Styles>
                            
                            <DataGrid.Columns>
                                
                                <!-- Device ID -->
                                <DataGridTextColumn
                                    IsReadOnly="True"
                                    Width="Auto"
                                    MinWidth="120"
                                    Header="Device ID" 
                                    Binding="{CompiledBinding Id}" />
                                
                                <!-- MAC Address -->
                                <DataGridTextColumn
                                    IsReadOnly="True"
                                    Width="*"
                                    MinWidth="150"
                                    Header="MAC Address"
                                    Binding="{CompiledBinding MacAddress}"/>
                                
                                <!-- IP Address -->
                                <DataGridTextColumn
                                    IsReadOnly="True"
                                    Width="*"
                                    MinWidth="150"
                                    Header="IP Address"
                                    Binding="{CompiledBinding IpAddress}" />
                                
                                <!-- Device Name -->
                                <DataGridTextColumn
                                    IsReadOnly="True"
                                    Width="*"
                                    MinWidth="150"
                                    Header="Device Name"
                                    Binding="{CompiledBinding Name}" />
                                
                                <!-- Category -->
                                <DataGridTextColumn
                                    IsReadOnly="True"
                                    Width="*"
                                    MinWidth="150"
                                    Header="Category"
                                    Binding="{CompiledBinding Category}" />
                                
                                <!-- Signal Strength -->
                                <DataGridTextColumn
                                    IsReadOnly="True"
                                    Width="*"
                                    MinWidth="150"
                                    Header="Signal Strength"
                                    Binding="{CompiledBinding SignalStrength}" />
                                
                                <!-- Connection -->
                                <DataGridTextColumn
                                    IsReadOnly="True"
                                    Width="*"
                                    MinWidth="150"
                                    Header="Connection"
                                    Binding="{CompiledBinding Connection}" />
                            </DataGrid.Columns>
                        </DataGrid>
                        
                    </StackPanel>
                </shadui:Card>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>